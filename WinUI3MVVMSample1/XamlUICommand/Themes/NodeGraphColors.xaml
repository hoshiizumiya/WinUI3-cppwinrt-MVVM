<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XamlUICommand">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="NodeFillBrush"  Color="#FFFFFFFF"/>
            <SolidColorBrush x:Key="NodeStrokeBrush" Color="#3B82F6"/>
            <SolidColorBrush x:Key="NodeTextBrush"  Color="#111827"/>
            <SolidColorBrush x:Key="EdgeBrush"      Color="#7A7A7A"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="NodeFillBrush"  Color="#1F2937"/>
            <SolidColorBrush x:Key="NodeStrokeBrush" Color="#60A5FA"/>
            <SolidColorBrush x:Key="NodeTextBrush"  Color="#F9FAFB"/>
            <SolidColorBrush x:Key="EdgeBrush"      Color="#A3A3A3"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
